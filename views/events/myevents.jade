extends ../../layouts/default

block head
  title My Events
  
block body
  div.row
    div.col-sm-8
      div.page-header
        h1.capitalize #{data[0].username}'s Events
      if data
        ul.events
          each event, i in data
            li
              h4 #{event.name}
                |  &nbsp; &nbsp;  
                i.fa.fa-pencil 
                a(href="/events/edit/#{event._id}") Edit    
                |  &nbsp; &nbsp; 
                i.fa.fa-trash 
                a(class="deleteEvent", data-delete="#{event._id}", href="#") Delete  
            ul.event.list
              li 
                strong Venue:
                |  #{event.venue}
              li 
                strong Date:
                |  #{event.date}
              li 
                strong Start Time:
                |  #{event.startTime}
              li 
                strong End Time:
                |  #{event.endTime}
            p #{event.description} 
            
            
      else
        p You have no events        
    div.col-sm-4
      div.page-header
        h1 Sidebar